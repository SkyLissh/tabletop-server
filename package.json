{
  "private": true,
  "name": "my-app",
  "version": "1.0.0",
  "description": "npm init template for bootstrapping an empty Colyseus project",
  "type": "module",
  "engines": {
    "node": ">= 16.13.0"
  },
  "scripts": {
    "start": "bun --hot src/index.ts | pino-pretty",
    "loadtest": "bun loadtest/example.ts --room my_room --numClients 2",
    "build": "bun run clean && bun build --compile --minify --sourcemap ./src/index.ts --outdir ./server",
    "clean": "rimraf server",
    "test": "mocha -r tsx test/**_test.ts --exit --timeout 15000"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/colyseus/create-colyseus/issues"
  },
  "homepage": "https://github.com/colyseus/create-colyseus#readme",
  "devDependencies": {
    "@colyseus/loadtest": "^0.15.0",
    "@colyseus/testing": "^0.15.0",
    "@types/bun": "latest",
    "@types/express": "^4.17.1",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.2.0",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "@colyseus/bun-websockets": "^0.15.3",
    "@colyseus/monitor": "^0.15.0",
    "@colyseus/playground": "^0.15.3",
    "@colyseus/tools": "^0.15.0",
    "colyseus": "^0.15.0",
    "express": "^4.18.2",
    "pino": "^9.3.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.4"
  }
}
